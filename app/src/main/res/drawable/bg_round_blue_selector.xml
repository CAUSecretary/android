<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/basic_color">
            </stroke>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/color_ebebeb">
            </stroke>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners android:radius="6dp"/>
        </shape>
    </item>
</selector>